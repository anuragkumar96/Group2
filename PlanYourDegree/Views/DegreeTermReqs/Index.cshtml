@model IEnumerable<PlanYourDegree.Models.DegreeTermReq>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreePlanIDParam"]">@Html.DisplayNameFor(model => model.DegreePlan)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermIDParam"]">@Html.DisplayNameFor(model => model.Course)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CourseIDParam"]">@Html.DisplayNameFor(model => model.Term)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlan.DegreePlanAbbreve)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.TermId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DegreeTermReqId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DegreeTermReqId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DegreeTermReqId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
